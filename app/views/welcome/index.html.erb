<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @hosts.each do |host| %>
      <tr class="<% if !host.online? %>danger<% end %>">
        <td><%= host.name %></td>
        <td><a href="<%= host.path %>"><%= host.path %></a></td>
        <td><%= host.online? ? 'Online' : 'Offline'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
